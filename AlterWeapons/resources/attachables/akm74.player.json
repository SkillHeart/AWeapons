{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "stalcraft:attachable_akm74.player",
            "item": {
                "stalcraft:attachable_akm74": "query.owner_identifier == 'minecraft:player'"
            },
            "materials": {
                "default": "armor",
                "enchanted": "armor_enchanted"
            },
            "textures": {
                "default": "textures/weapons/akm74",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.player.akm74"
            },
            "scripts": {
                "parent_setup": "variable.boot_layer_visible = 0.0;",
                "animate": [
                    "offset",
                    "weapon"
                ]
            },
            "animations": {
                "offset": "animation.armor.boots.offset",
                "weapon": "animation.player.hand.akm74"
            },
            "render_controllers": [
                "controller.render.player.weapon"
            ]
        }
    }
}